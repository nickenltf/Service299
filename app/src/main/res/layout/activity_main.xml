<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@mipmap/background1">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="395dp"
            android:layout_height="715dp"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:srcCompat="@mipmap/mp3"
                android:id="@+id/imageView"/>
        <TextView
                android:text="Nicken Lutfyanis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:id="@+id/textView"
                android:textColor="#E2E7E7"/>
        <TextView
                android:text="Universitas Teknologi Yogyakarta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp" android:textColor="#E2E7E7"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="Instagram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_instagram"
                    android:layout_weight="1"
                 android:backgroundTint="#CBE4E7"/>
            <Button
                    android:text="Facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_facebook"
                    android:layout_weight="1" android:backgroundTint="#CBE4E7"/>
        </LinearLayout>
        <TextView
                android:text="MP3 Player"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textSize="24sp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="130dp"
                android:textColor="#E2E7E7"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="Play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_play"
                    android:layout_weight="1" android:backgroundTint="#CBE4E7"/>
            <Button
                    android:text="Pause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_pause"
                    android:layout_weight="1" android:backgroundTint="#CBE4E7"/>
            <Button
                    android:text="Stop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_stop"
                    android:layout_weight="1" android:backgroundTint="#CBE4E7"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>